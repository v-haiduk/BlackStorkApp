
@{
    ViewBag.Title = "Добавление статьи";
}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="page-title">
        <div class="title_left">
            <h3>Блог</h3>
        </div>
    </div>
<div class="x_panel">
    <div class="x_title">
        <h2>Добавление статьи</h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="col-md-12">
            <form class="form-horizontal form-label-left" method="post" role="form" id="form" enctype="multipart/form-data">
                <input type="hidden" name="TopicId"/>
                <input type="hidden" name="DateOfCreate" value="@DateTime.Now"/>

                <div class="form-group">
                    <label>Заголовок *</label>
                    <input class="form-control" type="text" name="Header" placeholder="Введите заголовок..." required/>
                </div>

                <div class="form-group">
                    <label>Описание *</label>
                    <textarea class="resizable_textarea form-control" type="text" name="Description"
                              placeholder="Введите описание..." rows="10" required></textarea>
                </div>

                <input class="btn btn-default" type="file" name="photo"/>
                <input type="hidden" name="PathForMainPhoto" placeholder="main photo"/>
                <input type="hidden" name="PathForFolderWithPhotos" placeholder="other photo"/>

                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button class="btn btn-primary" type="submit">Сохранить</button>
                            <button type="submit" class="btn btn-success" onclick="form().reset">Отменить</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>


