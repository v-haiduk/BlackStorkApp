@{
    Layout = "~/Views/Shared/LoginPage.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row center">
        <h1>Авторизация</h1>
    </div>
    <div class="col_full">
        <label for="login-form-username">Логин:</label>
        <input class="form-control not-dark" type="text" id="login-form-username" name="Login" maxlength="20" required>
    </div>
    <div class="col_full">
        <label for="login-form-password">Пароль:</label>
        <input class="form-control not-dark" type="password" id="login-form-password" name="HashOfPassword" maxlength="20" required />
    </div>
    <div class="col_full nobottommargin">
        <button class="button button-3d button-black nomargin" id="login-form-submit" type="submit">Войти</button>
        @Html.ActionLink("Забыли пароль?", "ResetPassword", "Account", null, new {@class = "fright" })
    </div>
}


